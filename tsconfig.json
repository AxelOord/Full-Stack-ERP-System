{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@my-org/*": ["libs/*"]
      },
      "target": "ES2020",
      "module": "CommonJS",
      "lib": ["ES2020", "DOM"],
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true
    },
    "exclude": ["node_modules", "tmp"],
    "include": ["**/*.ts", "**/*.tsx"]
  }
  